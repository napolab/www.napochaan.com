{
  "excludeFiles": [
    "./**/*.{test,spec,stories}.tsx"
  ],
  "extends": [
    "markuplint:recommended-react"
  ],
  "rules": {
    "no-hard-code-id": false,
    "permitted-contents": false
  },
  "parser": {
    ".tsx$": "@markuplint/jsx-parser"
  },
  "specs": {
    ".tsx$": "@markuplint/react-spec"
  },
  "pretenders": [
    {
      "selector": "Section",
      "as": {
        "element": "section"
      }
    },
    {
      "selector": "Article",
      "as": {
        "element": "article"
      }
    },
    {
      "selector": "Heading",
      "as": {
        "element": "h1"
      }
    },
    {
      "selector": "Switch",
      "as": {
        "element": "input"
      }
    },
    {
      "selector": "Budoux",
      "as": {
        "element": "span"
      }
    },
    {
      "selector": "SquareImage",
      "as": {
        "element": "figure"
      }
    }
  ]
}
