{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["vitest/globals", "@cloudflare/workers-types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@theme": ["src/theme/index.ts"],
      "@theme/*": ["src/theme/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@adapters/*": ["src/adapters/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "vitest-setup.ts",
    "next.config.js",
    ".eslintrc.cjs",
    ".next/types/**/*.ts",
    "postcss.config.cjs"
  ],
  "exclude": ["node_modules", "dist", "coverage", "out", "build", "public", ".next"]
}
